# Azure OpenAI Configuration
# Copy this file to .env and fill in your actual values

# Your Azure OpenAI endpoint (e.g., https://your-resource-name.openai.azure.com/)
AZURE_OPENAI_ENDPOINT=

# Your Azure OpenAI API key
AZURE_OPENAI_API_KEY=

# Your deployed model name (check your Azure OpenAI Studio deployments)
# Common deployment names: gpt-4o, gpt-4o-mini, gpt-4, gpt-35-turbo
AZURE_OPENAI_CHAT_DEPLOYMENT=gpt-4o-mini

# Model name (usually matches deployment name)
AZURE_OPENAI_CHAT_MODEL=gpt-4o-mini

# Embedding model deployment (if you have one)
AZURE_OPENAI_EMBED_DEPLOYMENT=text-embedding-ada-002
AZURE_OPENAI_EMBED_MODEL=text-embedding-ada-002
AZURE_OPENAI_EMBED_DIMENSIONS=1536
